@model TARge21House.Models.House.HouseDeleteViewModel

<h1>Delete</h1>

<div>
    <h4>Houses</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-from-label"></label>
            @Html.DisplayFor(model => model.Id)
        </div>

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-from-label"></label>
            @Html.DisplayFor(model => model.Name)
        </div>

        <div class="form-group row">
            <label asp-for="Size" class="col-sm-2 col-from-label"></label>
            @Html.DisplayFor(model => model.Size)
        </div>

        <div class="form-group row">
            <label asp-for="RoomCount" class="col-sm-2 col-from-label">Room Count</label>
            @Html.DisplayFor(model => model.RoomCount)
        </div>

        <div class="form-group row">
            <label asp-for="Floors" class="col-sm-2 col-from-label"></label>
            @Html.DisplayFor(model => model.Floors)
        </div>

        <div class="form-group row">
            <label asp-for="Color" class="col-sm-2 col-from-label"></label>
            @Html.DisplayFor(model => model.Color)
        </div>

        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-from-label">Created At</label>
            @Html.DisplayFor(model => model.CreatedAt)
        </div>

        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-from-label">Modified At</label>
            @Html.DisplayFor(model => model.ModifiedAt)
        </div>
    </dl>
</div>
<hr />

<form asp-action="DeleteConfirmation">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="index" asp-controller="house" class="btn btn-success">Back</a>
</form>
