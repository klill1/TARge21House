@model TARge21House.Models.House.HouseCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
} else
{
    <h1>Create</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Size" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Size" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="RoomCount" class="col-sm-2 col-form-label">Room Count</label>
            <div class="col-sm-10">
                <input asp-for="RoomCount" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Floors" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Floors" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Color" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Color" class="form-control" />
            </div>
        </div>

        <hr />

        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="house" type="submit" class="btn btn-primary" value="Update" />
        } else
        {
            <input asp-action="create" asp-controller="house" type="submit" class="btn btn-primary" value="Create" />
        }

        <a asp-action="index" class="btn btn-primary">Back</a>

    </form>
</div>
